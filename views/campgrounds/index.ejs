<% layout('layouts/boilerplate')%>
<div id="map" style="width: 100%; height: 400px" ></div>
<br>
<h1>All Campgrounds</h1>
<div>
  <a class="btn btn-success" href="/campgrounds/new">Insert new campground</a>
</div>
<br>

  <% for (let campground of campgrounds) {%>
    <div class="card mb-4">
      <div class="row">
        <div class="col-md-4">
          <%if(campground.images.length) {%>
            <a href="campgrounds/<%= campground._id %>"><img class="img-fluid" alt="" src="<%= campground.images[0].url %>"></a>
            <% } else {%>
              <a href="campgrounds/<%= campground._id %>"><img class="img-fluid" alt="" src="https://res.cloudinary.com/dmzylphyc/image/upload/v1634677761/YelpCamp/l16xgy4p38fnbxf9refi.jpg"></a>
          <% } %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5><a href="campgrounds/<%= campground._id %>"><%= campground.title%></a>
            </h5>
            <!-- <h5 class="card-title"><%= campground.properties.popUpMarkup%></h5> -->
            <br>
            <p class="card-text"><%= campground.description%></p>
            <small class="text-muted"><%= campground.location%></small>
            <br>
            <br>
            <div>
              <a class="btn btn-primary" href="campgrounds/<%= campground._id %>">View</a>
            </div>



          </div>
        </div>
      </div>
    </div>

  <% }%>
</div>
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campgrounds = {features: <%-JSON.stringify(campgrounds)%>};
</script>

<script src="/javascripts/clusterMap.js"></script>



